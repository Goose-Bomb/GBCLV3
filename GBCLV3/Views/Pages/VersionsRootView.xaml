<ContentControl x:Class="GBCLV3.Views.Pages.VersionsRootView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:s="https://github.com/canton7/Stylet"
                xmlns:adonisUI="clr-namespace:AdonisUI;assembly=AdonisUI">

    <Grid>
        <Rectangle Opacity="0.25"
                   Fill="{DynamicResource {x:Static adonisUI:Brushes.AccentBrush}}"/>

        <Border Background="{DynamicResource DarkTranslucentBrush}">
            <ContentControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            s:View.Model="{Binding ActiveItem, Mode=OneWay}"/>
        </Border>

    </Grid>

</ContentControl>
